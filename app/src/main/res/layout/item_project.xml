<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_Layout_1"
            android:background="@color/white"
            android:padding="10dp"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/etItemProjectName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Summary"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/etItemProjectSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etItemProjectStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="12.03.2020"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/etItemProjectEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="10.02.2023"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layoutProjectEditDelete"
                android:layout_gravity="center"
                android:visibility="visible"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEditProject"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/outline_btn_green"
                    android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_green"/>

                <Button
                    android:id="@+id/btnDeleteProject"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_shap_delete"
                    android:drawableLeft="@drawable/ic_delete_field"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Delete Field"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/red"/>

            </LinearLayout>

            <Button
                android:id="@+id/button_BuildResumeProject_AddField_1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_save"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Update"
                android:textStyle="bold"
                android:visibility="gone"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

            <Button
                android:id="@+id/button_BuildResumeProject_Update_1"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_Layout_2"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editText_BuildResumeProjects_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Summary"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editText_BuildResumeProjects_Summary_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumeProjects_startDate_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Write Project Start Date"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumeProjects_endDate_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Write Project End Date"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/button_BuildResumeProject_AddField_2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Add Field"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

            <Button
                android:id="@+id/button_BuildResumeProjects_DeleteField_2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_shap_delete"
                android:drawableLeft="@drawable/ic_delete_field"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Delete Field"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/red"/>

            <Button
                android:id="@+id/button_BuildResumeProject_Update_2"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:visibility="gone"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/project_Layout_3"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/editText_BuildResumeProjects_name_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Summary"
                android:textColor="@color/headingBlack"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/editText_BuildResumeProjects_Summary_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="20dp"
                android:background="@drawable/inputfinal"
                android:hint="Write Project Title"
                android:textSize="14sp"
                android:singleLine="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumeProjects_startDate_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Write Project Start Date"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/headingBlack"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumeProjects_endDate_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Write Project End Date"
                        android:textSize="14sp"
                        android:singleLine="true"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_BuildResumeProjects_DeleteField_3"
                android:layout_width="160dp"
                android:layout_height="40dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn_shap_delete"
                android:drawableLeft="@drawable/ic_delete_field"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Delete Field"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/red"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>