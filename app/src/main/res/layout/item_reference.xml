<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout_EducationalQualification_5_AddReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_BuildResumePart5_AddReference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Reference"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="64dp">
                    <!--Reference1-->
                    <LinearLayout
                        android:id="@+id/linearlayout_BuildResumePart5_Reference_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name"
                            android:textColor="@color/headingBlack"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="8dp"/>

                        <EditText
                            android:id="@+id/editText_BuildResumePart5_Reference1_Name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/inputfinal"
                            android:hint="Enter Full Name"
                            android:textSize="14sp"
                            android:paddingLeft="16dp"
                            android:singleLine="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Designation"
                            android:textColor="@color/headingBlack"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="16dp"/>

                        <EditText
                            android:id="@+id/editText_BuildResumePart5_Reference1_Designation"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/inputfinal"
                            android:hint="Enter Designation"
                            android:textSize="14sp"
                            android:paddingLeft="16dp"
                            android:singleLine="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organisation Name"
                            android:textColor="@color/headingBlack"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="16dp"/>

                        <EditText
                            android:id="@+id/editText_BuildResumePart5_Reference1_OrganizationName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/inputfinal"
                            android:hint="Enter Organaisation Name"
                            android:textSize="14sp"
                            android:paddingLeft="16dp"
                            android:singleLine="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/headingBlack"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="16dp"/>

                        <EditText
                            android:id="@+id/editText_BuildResumePart5_Reference1_Email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/inputfinal"
                            android:hint="Enter Email"
                            android:textSize="14sp"
                            android:paddingLeft="16dp"
                            android:singleLine="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mobile"
                            android:textColor="@color/headingBlack"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="16dp"/>

                        <EditText
                            android:id="@+id/editText_BuildResumePart5_Reference1_MobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/inputfinal"
                            android:hint="Enter Mobile Number"
                            android:textSize="14sp"
                            android:paddingLeft="16dp"
                            android:singleLine="true"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/layoutReferenceEditDelete"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnEditReference"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_margin="20dp"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/outline_btn_green"
                                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="Edit"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:textColor="@color/btn_green"/>

                            <Button
                                android:id="@+id/btnDeleteReference"
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_margin="20dp"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_shap_delete"
                                android:drawableLeft="@drawable/ic_delete_field"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="Delete Field"
                                android:textStyle="bold"
                                android:textAllCaps="false"
                                android:textColor="@color/red"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button_BuildResumePart5_AddField_1"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/outline_btn_green"
                            android:drawableLeft="@drawable/ic_save"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:visibility="gone"
                            android:text="Update"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/btn_green"/>

                        <Button
                            android:id="@+id/button_BuildResumePart5_DeleteField_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Delete Field"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>