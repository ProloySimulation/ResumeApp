<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivities.BuildResumePart5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_EducationalQualification_5_AddReference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_BuildResumePart5_AddReference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Reference"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="64dp">

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/toolBarBlog"
                    android:background="#ffffff">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Reference"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/tvRefDataSave"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:text="Save" />

                    </RelativeLayout>

                </androidx.appcompat.widget.Toolbar>
                <!--Reference1-->
                <LinearLayout
                    android:id="@+id/linearlayout_BuildResumePart5_Reference_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Reference 1"
                        android:textStyle="bold"
                        android:background="@color/clr_bck"
                        android:drawableRight="@drawable/ic_thumb_up"
                        android:textColor="@color/headingBlack"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference1_Name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Full Name"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designation"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference1_Designation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Designation"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organisation Name"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference1_OrganizationName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Organaisation Name"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference1_Email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Email"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference1_MobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Mobile Number"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/button_BuildResumePart5_AddField_1"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/outline_btn_green"
                        android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Add Field"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/btn_green"/>

                    <Button
                        android:id="@+id/button_BuildResumePart5_DeleteField_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="Delete Field"/>
                </LinearLayout>

                <!--Reference2-->
                <LinearLayout
                    android:id="@+id/linearlayout_BuildResumePart5_Reference_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Reference 2"
                        android:textStyle="bold"
                        android:background="@color/clr_bck"
                        android:drawableRight="@drawable/ic_thumb_up"
                        android:textColor="@color/headingBlack"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="8dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference2_Name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Full Name"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designation"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference2_Designation"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Designation"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Organisation Name"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference2_OrganizationName"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Organaisation Name"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference2_Email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Email"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="@color/headingBlack"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="16dp"/>

                    <EditText
                        android:id="@+id/editText_BuildResumePart5_Reference2_MobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/inputfinal"
                        android:hint="Enter Mobile Number"
                        android:textSize="14sp"
                        android:paddingLeft="16dp"
                        android:singleLine="true"/>

                    <Button
                        android:id="@+id/button_BuildResumePart5_DeleteField_2"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/btn_shap_delete"
                        android:drawableLeft="@drawable/ic_delete_field"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Delete Field"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textColor="@color/red"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/divider_drawble_body"/>

                <!--    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_gravity="center"
                        android:text="Click Next To Finish"
                        android:textSize="10sp"
                        android:textColor="@color/grey"/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_BuildResumePart5_Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Data" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>