<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="ifContentScrolls"
    tools:context=".InputActivities.BuildResumePart1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Update Basic Infromation"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:text="Upload Photo"
                android:textStyle="bold"
                android:background="@color/clr_bck"
                android:drawableRight="@drawable/ic_file_upload"
                android:textColor="@color/headingBlack"
                android:textSize="14sp"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Upload Your Photo"
                    android:textColor="@color/headingBlack"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/imageView_EditResumePart1_Image"
                    android:layout_width="25mm"
                    android:layout_height="30mm"
                    android:layout_gravity="center"
                    android:background="@drawable/inputfinal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/unnamed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="*** Passport Size Photographs (45mm X 55mm) ***"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/button_EditResumePart1_SelectFromGallery"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/outline_btn_blue"
                    android:drawableLeft="@drawable/ic_image_photo"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Upload Photo"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Basic Information"
                    android:textStyle="bold"
                    android:background="@color/clr_bck"
                    android:drawableRight="@drawable/ic_person_basic"
                    android:textColor="@color/headingBlack"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/edittext_EditResumePart1_Name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/editText_EditResumePart1_ContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Contact Number"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/editText_EditResumePart1_Email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Email"
                    android:textSize="14sp"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"/>

                <EditText
                    android:id="@+id/editText_EditResumePart1_PresentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Present Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

            </LinearLayout>

            <Button
                android:id="@+id/button_EditResumePart1_Update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/outline_btn_blue"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary1"
                android:layout_gravity="center"/>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>