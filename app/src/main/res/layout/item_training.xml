<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/training_Layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Training / Achievement Name"
            android:textColor="@color/headingBlack" />

        <EditText
            android:id="@+id/editText_BuildResumeTraining_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputfinal"
            android:hint="Write Training / Project Title"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Training / Achievement Summary"
            android:textColor="@color/headingBlack" />

        <EditText
            android:id="@+id/editText_BuildResumeTraining_Summary_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputfinal"
            android:hint="Write Training / Achievement Detail"
            android:padding="20dp"
            android:singleLine="true"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Training / Achievement Final Date"
                    android:textColor="@color/headingBlack" />

                <EditText
                    android:id="@+id/editText_BuildResumeTraining_endDate_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputfinal"
                    android:hint="16.09.2021"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layoutProjectEditDelete"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditTraining"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_add_circle_black_24dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Edit"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

            <Button
                android:id="@+id/btnTrainingDelete"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_margin="20dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:background="@drawable/btn_shap_delete"
                android:drawableLeft="@drawable/ic_delete_field"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Delete Field"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/red"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_BuildResumeProject_Update_1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/outline_btn_green"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/btn_green"
            android:textStyle="bold"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>