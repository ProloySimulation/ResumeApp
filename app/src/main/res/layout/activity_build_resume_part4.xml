<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivities.BuildResumePart4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:paddingBottom="64dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Personal Information"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary1"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Personal Details"
                    android:textStyle="bold"
                    android:background="@color/clr_bck"
                    android:drawableRight="@drawable/ic_person_basic"
                    android:textColor="@color/headingBlack"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Full Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_FatherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Father's Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mohter's Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_MotherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Mother's Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gender"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Gender"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Gender"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date of Birth"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_BD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Date of Birth:"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_BirthDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Marital Status"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_MaritialStatus"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Marital Status"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_MaritialStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Nationality"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Nationality"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Nationality"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Religion"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Religion"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Religion"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Religion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_PresentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Present Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permanent Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_PermanentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Permanent Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/divider_drawble_body"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Please Go To The Next Step"
                    android:textSize="10sp"
                    android:textColor="@color/grey"/>


                <Button
                    android:id="@+id/button_BuildResumePart4_Next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_shape"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Next"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_BuildResumePart4_Data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DATA" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>