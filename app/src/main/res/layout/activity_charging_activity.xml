<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BuildResumePDF_Part2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Make Payment"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary1"
                android:textSize="18sp"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/payment"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingBottom="30dp">



                    <TextView
                            android:id="@+id/chargeStatus"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"
                            android:padding="20dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:text="You Will Be Charged BDT 00 To Complete Your Resume"
                            android:background="@drawable/li_make_payment"/>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:text="Press The Button To Confirm Your Payment"/>
                        <Button
                            android:id="@+id/button_Done"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/btn_payment"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:text="Confirm Payment"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:textColor="#FFFF"
                            android:layout_gravity="center"/>


                </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </FrameLayout>
</LinearLayout>