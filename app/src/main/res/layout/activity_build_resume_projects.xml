<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_bck"
    tools:context=".inputactivities.BuildResumeProjects">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBarBlog"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Projects"/>

                <TextView
                    android:id="@+id/tvProjectsSave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="Save" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_Layout_1"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textColor="@color/headingBlack"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editText_BuildResumeProjects_name_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/inputfinal"
            android:hint="Write Project Title"
            android:textSize="14sp"
            android:singleLine="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Summary"
            android:textColor="@color/headingBlack"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/editText_BuildResumeProjects_Summary_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="20dp"
            android:background="@drawable/inputfinal"
            android:hint="Write Project Title"
            android:textSize="14sp"
            android:singleLine="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Date"
                    android:textColor="@color/headingBlack"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumeProjects_startDate_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Write Project Start Date"
                    android:textSize="14sp"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Date"
                    android:textColor="@color/headingBlack"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumeProjects_endDate_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Write Project End Date"
                    android:textSize="14sp"
                    android:singleLine="true"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_BuildResumeProject_AddField_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/outline_btn_green"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Add Field"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/btn_green"/>

        <Button
            android:id="@+id/button_BuildResumeProject_Update_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/outline_btn_green"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Update"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/btn_green"/>

    </LinearLayout>

    <LinearLayout
