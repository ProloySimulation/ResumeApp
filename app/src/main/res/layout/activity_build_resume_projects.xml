                    android:text="End Date"
                    android:textColor="@color/headingBlack"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumeProjects_endDate_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Write Project End Date"
                    android:textSize="14sp"
                    android:singleLine="true"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_BuildResumeProjects_DeleteField_3"
            android:layout_width="160dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_shap_delete"
            android:drawableLeft="@drawable/ic_delete_field"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Delete Field"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/red"/>

    </LinearLayout>


    </LinearLayout>
</ScrollView>