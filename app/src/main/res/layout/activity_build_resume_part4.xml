<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inputactivities.personal.ActivityPersonal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolBarBlog"
                android:background="#ffffff">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imvPersonalBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back_arrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Personal Information"
                        android:textSize="18dp" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="64dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Upload Photo"
                    android:textStyle="bold"
                    android:background="@color/clr_bck"
                    android:drawableRight="@drawable/ic_file_upload"
                    android:textColor="@color/headingBlack"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Upload Your Photo"
                    android:textColor="@color/headingBlack"
                    android:layout_marginTop="8dp"/>

                <ImageView
                    android:id="@+id/imageView_BuildResumePart1_Image"
                    android:layout_width="30mm"
                    android:layout_height="35mm"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:background="@drawable/inputfinal"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/unnamed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="*** Passport Size Photographs (45mm X 55mm) ***"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="12sp"/>

                <Button

                    android:id="@+id/button_BuildResumePart4_SelectFromGallery"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/outline_btn_blue"
                    android:drawableLeft="@drawable/ic_image_photo"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Upload Photo"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Profile Summary"
                    android:textStyle="bold"
                    android:background="@color/clr_bck"
                    android:drawableRight="@drawable/ic_person_basic"
                    android:textColor="@color/headingBlack"
                    android:textSize="14sp"/>

                <AutoCompleteTextView
                    android:id="@+id/editText_BuildResumePart4_Summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:padding="20dp"
                    android:background="@drawable/inputfinal"
                    android:text="@string/summary"
                    android:textSize="14sp"
                    android:singleLine="false"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_Tittle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Current Job Position"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Personal Details"
                    android:textStyle="bold"
                    android:background="@color/clr_bck"
                    android:drawableRight="@drawable/ic_person_basic"
                    android:textColor="@color/headingBlack"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Full Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile no."
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Mobile Number"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Email Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_FatherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Father's Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother's Name"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_MotherName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Mother's Name"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Gender"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Gender"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Gender"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date of Birth"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_BD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Date of Birth:"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_BirthDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:layout_marginLeft="8dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Marital Status"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_MaritialStatus"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Marital Status"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_MaritialStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Nationality"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Nationality"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Nationality"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Nationality"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Religion"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:paddingLeft="16dp"
                    android:background="@drawable/inputfinal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_BuildResumePart4_Religion"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Religion"
                        android:textColor="@color/grey"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <Spinner
                            android:layout_alignParentRight="true"
                            android:id="@+id/spinner_BuildResumePart4_Religion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_PresentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Present Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permanent Address"
                    android:textColor="@color/headingBlack"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="16dp"/>

                <EditText
                    android:id="@+id/editText_BuildResumePart4_PermanentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/inputfinal"
                    android:hint="Enter Permanent Address"
                    android:textSize="14sp"
                    android:paddingLeft="16dp"
                    android:singleLine="true"/>


            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/personaInfoSave"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:onClick="postPersonalInfo"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_save"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Save"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:id="@+id/personalInfoUpdate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:onClick="updateInfo"
                android:background="@drawable/outline_btn_green"
                android:drawableLeft="@drawable/ic_save"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:text="Update"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/btn_green"/>

        </LinearLayout>

    </ScrollView>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/spin_kit"
        style="@style/SpinKitView.Large.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>