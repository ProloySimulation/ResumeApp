                    android:background="@drawable/inputfinal"
                    android:hint="Write Project End Date"
                    android:textSize="14sp"
                    android:singleLine="true"/>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/button_BuildResumeProject_AddField_2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/outline_btn_green"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Add Field"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/btn_green"/>

        <Button
            android:id="@+id/button_BuildResumeProjects_DeleteField_2"
            android:layout_width="160dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/btn_shap_delete"
            android:drawableLeft="@drawable/ic_delete_field"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Delete Field"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/button_BuildResumeProject_Update_2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/outline_btn_green"
            android:drawableLeft="@drawable/ic_add_circle_black_24dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Update"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/btn_green"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/project_Layout_3"
